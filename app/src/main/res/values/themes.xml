<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ramses4" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ramses4.Fullscreen" parent="Theme.Ramses4">
        <item name="android:actionBarStyle">@style/Widget.Theme.Ramses4.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Ramses4.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
        <item name="fontFamily">@font/caesar_dressing</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/caesar_dressing</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:buttonTint">@color/text_color</item>
    </style>
</resources>